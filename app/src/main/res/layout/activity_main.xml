<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.zitech.test.activity.MainActivity">

    <Button
        android:id="@+id/btn_api_test"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:text="API测试" />

    <Button
        android:id="@+id/btn_download_test"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/h20"
        android:text="单个下载测试" />

    <Button
        android:id="@+id/btn_download_list_test"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/h20"
        android:text="列表下载测试" />

    <Button
        android:id="@+id/btn_load_more_listview"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/h20"
        android:text="ListView加载更多" />

    <Button
        android:id="@+id/btn_load_more_recycleview"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/h20"
        android:text="RecycleView加载更多" />

    <Button
        android:id="@+id/btn_view_holder_test"
        style="@style/CommonButton"
        android:layout_width="fill_parent"
        android:layout_marginTop="@dimen/h20"
        android:text="分情况展示数据示例" />

</LinearLayout>
