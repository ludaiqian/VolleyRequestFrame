<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top" 
        android:gravity="center">

        <ProgressBar
            android:id="@+id/drop_down_list_footer_progress_bar"
            android:layout_width="@dimen/w34"
            android:layout_height="@dimen/h34"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/progress_indeterminate_drawable"
            android:visibility="visible" />

        <Button
            android:id="@+id/drop_down_list_footer_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/h96"
            android:layout_marginLeft="@dimen/w16"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:text="@string/drop_down_list_footer_loading_text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/w26" />
    </LinearLayout>

    <View
        android:id="@+id/space"
        android:layout_width="0dp"
        android:layout_height="@dimen/h192"
        android:visibility="gone"
      />

</LinearLayout>